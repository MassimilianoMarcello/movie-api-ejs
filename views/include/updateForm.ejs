<form action="/api/update/>" method="POST" class="update-form">
    <input type="hidden" name="_method" value="PUT"> <!-- Metodo PUT con override -->
    <input type="hidden" name="id" value="">

    <label for="title">Titolo:</label>
    <input type="text" id="title" name="title" value="" required>

    <label for="director">Regista:</label>
    <input type="text" id="director" name="director" value="" required>

    <label for="year">Anno:</label>
    <input type="number" id="year" name="year" value="" required>

    <label for="logo">URL Logo:</label>
    <input type="url" id="logo" name="logo" value="<%= movie.logo %>" required>

    <button type="submit">Aggiorna Film</button>
</form>
